div(class="modal fade" id="myModalCarro" name="myModalCarro" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")

    div(class="modal-dialog")

        div(class="modal-content")

            div(class="modal-header")

                button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times;

                h4(class="modal-title" id="myModalLabel") Nuevo Vehiculo de Transporte
            div(class="modal-body")

                     div(id="mensaje" name="mensaje")
                form.form.users-new(action="JavaScript:GuardarCarro(#{linea})" method="post" id="formNuevoCarro" name="formNuevoCarro")
                                                .container-fluid.float-left
                                                    .row
                                                            .col-md-12
                                                                    .form-group
                                                                        .input-group
                                                                            .input-group-addon
                                                                                i.fa.fa-user
                                                                            input.form-control(name="placa", type="text", placeholder="Placa" required)
                                                                    
                                                                            input(type="hidden" name="idlinea" value="#{linea}")
                                                                    .form-group
                                                                        .input-group
                                                                            .input-group-addon
                                                                                i.fa.fa-user
                                                                            input.form-control(name="chofer", type="text", placeholder="Chofer" required)
                                                                    .form-group
                                                                        .input-group
                                                                            .input-group-addon
                                                                                i.fa.fa-user
                                                                            input.form-control(name="dni", type="text", placeholder="DNI")
                                                                    
                                                    div(class="modal-footer")
                                                                                                            
                                                                                                    
                                                                                                
                                                        button.btn.btn-default(type="button", data-dismiss="modal") Close
                                                        button.btn.btn-primary(type="submit") Save changes 
                                                                                                            
                                                