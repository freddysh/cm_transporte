extends ../parts/layout.jade
block vars
    - page = 'Usuarios';
block main
    .main-heading
        .main-title
            ol.breadcrumb
                li
                    a(href="./index.jade") Inicio
                li.active Usuarios
        .main-filter
            form.main-filter__search
                .input-group
                    input.form-control(type="text", placeholder="Search...")
                    span.input-group-btn
                        button.btn.btn-default(type="button")
                            .fa.fa-search
    .container-fluid.half-padding
        .template.template__table_data
            
                .row
                    
                    .col-md-12
                        .panel.panel-info
                            .panel-heading
                                h3.panel-title Usuarios
                                button(class="btn btn-primary"  data-toggle="modal" onclick="NuevoUsuario()") Nuevo
                                    i(class="fa fa-plus-circle fa-fw") 
                                                                  
                            .panel-body
                                div(id="DatosUsuario")
                                
                                .container-fluid
                                                    table(id="example" class="table datatable display table-hover" cellspacing="0" width="100%")
                                                        thead
                                                            tr
                                                                th Nombres
                                                                th Usuario
                                                                th Editar
                                                               
                                                        tbody
                                                            each Usuarios in usuarios
                                                                tr
                                                                    td=Usuarios.nombre
                                                                    td=Usuarios.usuario
                                                                    td
                                                                        button(class="btn btn-warning" onClick="EditarUsuario('"+Usuarios.idUsuario+"')")
                                                                            i(class="fa fa-pencil fa-fw")

                                                                        button(class="btn btn-danger" onClick="EliminarUsuario('"+Usuarios.idUsuario+"')") 
                                                                            i(class="fa fa-remove fa-fw")
                                                                                                                                            
                                                
                                    
