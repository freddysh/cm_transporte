extends ../parts/layout.jade
block vars
    - page = 'Historial';
block main
    
    .main-heading
        .main-title
            ol.breadcrumb
                li.active Inicio
        .main-filter
            form.main-filter__search
                .input-group
                    input.form-control(type="text", placeholder="Search...")
                    span.input-group-btn
                        button.btn.btn-default(type="button")
                            .fa.fa-search
    .container-fluid.half-padding
        .template.template__table_data
            .row
                .col-md-12
                    .panel.panel-danger
                        .panel-heading
                            h3.panel-title Historial de infracciones
                        .panel-body
                                body
                                    div(id="DatosCarro")
                                    div(id="idEstado")  
                                    .row
                                        .col-md-4
                                            .row
                                                label FECHA 1:
                                                input(id="fecha1" type="date"  required)
                                            .row
                                                label FECHA 2:
                                                input(id="fecha2" type="date"  required)
                                        .col-md-4
                                            label LINEA:
                                            select(id="lineas" onchange="CarrosLinea(this)")
                                                option(value="0") Seleccionar Linea
                                                each Lineas in lineas                                
                                                    option(value="#{Lineas.idlinea}") #{Lineas.nombre}
                                        .col-md-4
                                            button(class="btn btn-success" onClick="ReporteLinea()") Buscar
                                            button(class="btn btn-primary" onClick ="imprimir()") Exportar
                                    .container-fluid
                                                                                
                                            table(id="example" class="tables"  width="100%")
                                                thead
                                                    tr
                                                        th Nro
                                                        th LINEA
                                                        th BUS
                                                        th FECHA
                                                        th HORA
                                                        th LAT
                                                        th LON
                                                        th VEL
                                                        th VEL.PER
                                                        th DIST.RUTA
                                                        th DIST.PER
                                                        th VEL.PUERTA
                                                        th VEL.PUERTA.PER
                                                        th INFRACCION

                                                tbody
                                                    
                                  

    
