extends ../parts/layout.jade
block vars
    - page = 'Inicio';
block main
    .main-heading
        .main-title
            ol.breadcrumb
                li.active Inicio
        .main-filter
            form.main-filter__search
                .input-group
                    input.form-control(type="text", placeholder="Search...")
                    span.input-group-btn
                        button.btn.btn-default(type="button")
                            .fa.fa-search
    .container-fluid.half-padding
        .template.template__table_data
            .row
                .col-md-9
                    .panel.panel-danger
                        .panel-heading
                            h3.panel-title Alerta de infracciones en tiempo real
                        .panel-body
                                body(onload="Informes();")
                                    div(id="DatosCarro")
                                    div(id="idEstado")  
                                
                                    .container-fluid
                                        
                                            table(id="example" class="table datatable display table-hover" cellspacing="0" width="100%")
                                                thead
                                                    tr
                                                        th Linea
                                                        th Placa
                                                        th VELOCIDAD
                                                        th SEGURIDAD
                                                        th RUTA
                                                        th HORA
                                                        th OPCIONES
                                                tbody
                                                    
                .col-md-3
                    .panel.panel-danger
                        .panel-heading
                            h3.panel-title Resumen Estadistico de infracciones
                        .panel-body
                            .ov-widget
                                .ov-widget__list
                                    .ov-widget__item.ov-widget__item_inc
                                        .ov-widget__value 
                                            label(id="Total")
                                        .ov-widget__info
                                            .ov-widget__title Total de Infranciones
                                            .ov-widget__change
                                                span 
                                                span.fa.fa-level-up
                                                span.fa.fa-level-down
                                                span.fa.fa-bolt
                                                span.fa.fa-thumb-tack
                                    .ov-widget__item.ov-widget__item_dec
                                        .ov-widget__value
                                            label(id="Ruta")
                                        .ov-widget__info
                                            .ov-widget__title Total Infracciones de Ruta
                                            .ov-widget__change
                                                span 
                                                span.fa.fa-level-up
                                                span.fa.fa-level-down
                                                span.fa.fa-bolt
                                                span.fa.fa-thumb-tack
                                    .ov-widget__item.ov-widget__item_warn
                                        .ov-widget__value
                                            label(id="Velocidad")
                                        .ov-widget__info
                                            .ov-widget__title Total Infracciones de Velocidad
                                            .ov-widget__change
                                                span 
                                                span.fa.fa-level-up
                                                span.fa.fa-level-down
                                                span.fa.fa-bolt
                                                span.fa.fa-thumb-tack
                                    .ov-widget__item.ov-widget__item_tack
                                        .ov-widget__value
                                            label(id="Seguridad")
                                        .ov-widget__info
                                            .ov-widget__title Total infracciones de Seguridad
                                            .ov-widget__change
                                                span
                                                span.fa.fa-level-up
                                                span.fa.fa-level-down
                                                span.fa.fa-bolt
                                                span.fa.fa-thumb-tack
                                    
            
